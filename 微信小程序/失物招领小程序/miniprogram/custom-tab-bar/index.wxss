.tabbar{
  width: 100%;
  display: flex;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  padding-top: 10rpx;
  z-index: 999;
}
  
.tabbar-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; 
}

.tabbar-item .tabbar-image{
  width: 50rpx;
  height: 50rpx;    
}

.tabbar-item .tabber-text{
  font-size: 26rpx;
  margin-top: 10rpx;
}

.tabbar-item .publish{
  margin-bottom: auto;
}

.tabbar-item .publish .publish-image{
  height: 65rpx;
  width: 65rpx;
}

.tabbar-select{
  color:#053276;
}
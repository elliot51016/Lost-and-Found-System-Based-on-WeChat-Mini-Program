.body{
  background-color: #fff;
  width: 100vw;
  min-height: 100vh;
  padding-top: 20rpx;
}

.search{
  display: flex;
  width: 90%; 
  margin: 0 auto;
  background-color: #f3f3f3;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}

.search .search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.search .close-icon{
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  right: 20rpx;
}

.search-log{
  display:flex;
  padding: 30rpx 20rpx;
  justify-content: space-between;
  font-size: 26rpx;
  border-bottom: 3rpx solid #f3f3f3;
}
.search-log .search-delete{
  width: 40rpx; 
  height: 40rpx;
}

.log-list{
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
}

.log-list .log-item{
    background-color: #83878F;
    color: white;
    padding: 10rpx;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
    border-radius: 15rpx ;

}

.result-search {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.result-search .search-item{
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 20rpx 30rpx;
    /* 盒子模型 */
    box-sizing: border-box;
    border-bottom: 3rpx solid #f3f3f3;
    font-size: 26rpx;
}


.result-search .search-item .search-item-right{
  height: 30rpx;
  width: 30rpx;
}
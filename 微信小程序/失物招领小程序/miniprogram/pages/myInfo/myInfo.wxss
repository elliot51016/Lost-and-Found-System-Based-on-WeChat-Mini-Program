.body{
  height: 100vh;
  width: 100vw;
  background-color: #fff;
}

.info{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.info .info-item{
  display: flex;
  justify-content: space-between;
  width: 90%; 
  align-items: center;
  height: 170rpx;  
  border-bottom: 4px solid #f3f3f3;
}
 
.info .info-item .avatarUrl{
        width: 120rpx;
        height: 120rpx;
        border-radius: 50%;
        border: 3rpx solid #053276 ;
  }

  .phone-right{
    display: flex;
    align-items: center;
  
  }

  .phone-right .edit-input{
    border: 2rpx solid #d3d3d3;
    padding: 15rpx 5rpx ;
    margin-right: 20rpx;
  }

.phone-right .edit-status .edit-icon{
  width: 40rpx;
  height: 40rpx;
}
.phone-right .edit {
  position: relative;
}
.phone-right .edit .close-icon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 40rpx ;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  padding:20rpx ;
}

.btn{
  width: 80% !important;
  background-color: #053276;
  color: white;
  margin-top: 50rpx; 
}

.phone-right .phone{
  margin-right: 160rpx;
}

.body{
  position: relative;
  padding-bottom: 50rpx;
  /* padding-bottom: env(safe-area-inset-bottom); */
}

.banner{
  height: 60vh;

}

.banner-image{
  width: 100%;
  height: 60vh;

}

.name{
  background-color: white;
  margin-top: 20rpx;
  padding: 20rpx;
  font-weight: bold;

}

.container{
  background-color: #fff;
  margin-top: 10rpx;
}

.container .item{
  padding: 15rpx;
  display: flex;
  align-items: center;
}

.container .item .label{
  width: 70rpx;
  color: #999999;
  font-size: 26rpx ;
  margin-right: 20rpx;
  position: relative;
} 

.bottom{
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 20rpx 40rpx ;
  box-sizing: border-box;
  /* position: absolute; */
  width: 100%;
  /* bottom: 20rpx; */
  
}

.bottom .bottom-left{
  display: flex;
  align-items: center;
  background-color: #f3f3f3;
  border-radius: 30rpx  ;
  padding: 10rpx;
  width: 60%;
  color: #999999;
}

.bottom .bottom-left .icon-comment{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
}
.bottom .bottom-right{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottom .bottom-right .icon-collection{
  width: 40rpx;
  height: 40rpx;
}

.comment{
  background-color: #fff;
  /* margin-bottom: 0rpx; */
  margin-top: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.comment .title{
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}

.comment-list{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  max-height: 600rpx;
  overflow:scroll;
}

.comment-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;

}

.comment-item-left{
  display: flex;
  align-items: center;

}
.comment-item-left .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
}


.comment-item-left .content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  /* width: 500rpx; */
 
}
.content-text{
  max-width: 300rpx;
  max-height: 120rpx;
  overflow:scroll;
}

.comment .comment-textarea{
  border: 1px solid #000;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.comment .comment-button{
  margin-bottom: 20rpx;
  margin-top: 25rpx;
}
/* .comment-item-right{
  white-space:nowrap;
  display: flex;
  position: absolute;
  right: 5rpx;
} */

.warn-text{
  margin-top: 20rpx;
  text-align: center;
  color:#6d6767;
}

.modal{
  z-index: 10;
  display: flex;
  position: absolute;
  top: 50vh;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color:#053276;
  color:white;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
  width: 90%;
  border-radius: 40rpx;
}
.modal .btn-list{
  display: flex;
  margin-top: 20rpx;
}
.modal .Youtextarea{
  border: 1px solid rgb(233, 216, 216);
  border-radius: 40rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}
.modal .upload-btn{
  margin: 20rpx auto;
}

.modal .Youimg{
  width: 100%;
  height: 300rpx;
  margin: 20rpx auto;
}